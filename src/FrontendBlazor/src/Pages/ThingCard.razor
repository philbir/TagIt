<MudCard Style="height: 150px;" @onmouseout="MouseOut" @onmouseover="MouseOut">
    <MudCardMedia Image="@Thing.Thumbnail?.Url"  />
    <MudCardContent>
        <MudText Typo="Typo.h5">@Thing.Title</MudText>
        <MudText Typo="Typo.body2">@Thing.Type.Name</MudText>

    </MudCardContent>
    @if (_visible)
    {
        <MudCardActions>
            <MudIconButton  Icon="@Icons.Filled.RemoveRedEye"></MudIconButton>
            <MudIconButton Icon="@Icons.Filled.FileDownload"></MudIconButton>
        </MudCardActions>
    }
</MudCard>

@code {
    [Parameter]
    public IThings_Things_Nodes Thing { get; set; }

    private bool _visible = false;

    private void MouseOut()
    {
        _visible = !_visible;
    }
}
