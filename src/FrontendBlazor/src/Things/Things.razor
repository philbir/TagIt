@attribute [Route(Routing.Things.Page)]


<UseThings Context="result" Strategy="ExecutionStrategy.CacheAndNetwork">
    <ChildContent>
        <MudContainer Class="d-flex flex-wrap" MaxWidth="MaxWidth.False">
            @if (result.Things?.Nodes is not null)
            {
                @foreach (IThings_Things_Nodes thing in result.Things.Nodes)
                {
                    <ThingCard  Thing="@thing"></ThingCard>
                }
            }
        </MudContainer>
    </ChildContent>
    <LoadingContent>
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    </LoadingContent>
</UseThings>

